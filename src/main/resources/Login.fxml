<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="250">
    <children>
        <Label fx:id="headerLogin" text="%headerLogin.text" layoutX="170" layoutY="20" style="-fx-font-size: 18px;"/>

        <Label fx:id="labelUsername" text="%labelUsername.text" layoutX="70" layoutY="70"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="65" prefWidth="180"/>

        <Label fx:id="labelPassword" text="%labelPassword.text" layoutX="70" layoutY="110"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="105" prefWidth="180"/>

        <Button fx:id="btnLogin" text="%btnLogin.text" layoutX="150" layoutY="160" onAction="#handleLogin"/>
        <Button fx:id="btnSignup" text="%btnSignup.text" layoutX="230" layoutY="160" onAction="#handleSignupRedirect"/>

        <MenuButton fx:id="btnLanguage" layoutX="300" layoutY="20" text="%btnLanguage.text">
            <items>
                <MenuItem fx:id="itemEnglish" text="%itemEnglish.text" onAction="#onEnglishClick"/>
                <MenuItem fx:id="itemPersian" text="%itemPersian.text" onAction="#onPersianClick"/>
                <MenuItem fx:id="itemFinnish" text="%itemFinnish.text" onAction="#onFinnishClick"/>
                <MenuItem fx:id="itemChinese" text="%itemChinese.text" onAction="#onChineseClick"/>
            </items>
        </MenuButton>

    </children>
</AnchorPane>