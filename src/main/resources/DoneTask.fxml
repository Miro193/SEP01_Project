<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.DoneTaskController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <HBox alignment="TOP_RIGHT" prefHeight="25.0" prefWidth="400.0">
        <children>
            <MenuButton fx:id="btnLanguage" mnemonicParsing="false" text="%btnLanguage.text">
                <items>
                    <MenuItem fx:id="itemEnglish" mnemonicParsing="false" onAction="#onEnglishClick" text="%itemEnglish.text" />
                    <MenuItem fx:id="itemPersian" mnemonicParsing="false" onAction="#onPersianClick" text="%itemPersian.text" />
                    <MenuItem fx:id="itemFinnish" mnemonicParsing="false" onAction="#onFinnishClick" text="%itemFinnish.text" />
                    <MenuItem fx:id="itemChinese" mnemonicParsing="false" onAction="#onChineseClick" text="%itemChinese.text" />
                </items>
            </MenuButton>
        </children>
    </HBox>

    <Label fx:id="headerDoneTasks" text="%doneTask.header" style="-fx-font-size: 18px;"/>
    <ListView fx:id="doneList" prefWidth="300" prefHeight="200"/>
    <Button fx:id="backTolist" onAction="#backToList" text="%doneTask.back"/>
</VBox>
