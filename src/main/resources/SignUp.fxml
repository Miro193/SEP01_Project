<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SignUpController"
            prefWidth="400" prefHeight="300">
    <children>
        <Label fx:id="headerSignUp" text="%signup.header" layoutX="160" layoutY="20" style="-fx-font-size: 18px;"/>

        <Label fx:id="labelUsername" text="%signup.username" layoutX="70" layoutY="70"/>
        <TextField fx:id="usernameField" layoutX="150" layoutY="65" prefWidth="180"/>

        <Label fx:id="labelPassword" text="%signup.password" layoutX="70" layoutY="110"/>
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="105" prefWidth="180"/>

        <Label fx:id="labelConfirm" text="%signup.confirm" layoutX="70" layoutY="150"/>
        <PasswordField fx:id="confirmPasswordField" layoutX="150" layoutY="145" prefWidth="180"/>

        <Button fx:id="btnCreateAccount" text="%signup.createAccount" layoutX="150" layoutY="200" onAction="#handleSignUp"/>
        <Button fx:id="btnBackToLogin" text="%signup.backToLogin" layoutX="150" layoutY="240" onAction="#handleLoginRedirect"/>

        <MenuButton fx:id="btnLanguage" layoutX="300" layoutY="20" text="%btnLanguage.text">
            <items>
                <MenuItem fx:id="itemEnglish" text="%itemEnglish.text" onAction="#onEnglishClick"/>
                <MenuItem fx:id="itemPersian" text="%itemPersian.text" onAction="#onPersianClick"/>
                <MenuItem fx:id="itemFinnish" text="%itemFinnish.text" onAction="#onFinnishClick"/>
                <MenuItem fx:id="itemChinese" text="%itemChinese.text" onAction="#onChineseClick"/>
            </items>
        </MenuButton>
    </children>
</AnchorPane>
